                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid>
        <DataGrid HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="200" Margin="200,0,0,0" />
        <DataGrid HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="200" Margin="400,0,-6,0" />
    </Grid>
